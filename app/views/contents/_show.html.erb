<%= div_for content, data: {id: content.id} do %>
  <%= title loc(content, :title) %>
  <% if current_user %>
    <div class="btn-group">
      <%= link_to icon(:arrow_left, :back), content.class, class: 'btn' %>
      <%= link_to icon(:pencil, :edit), [:edit, content], class: 'btn' if can? :edit, content %>
      <%= link_to icon(:trash, :destroy), content, class: 'btn',
        method: :delete, confirm: t('.delete_confirm') if can? :edit, content %>
    </div>
  <% end %>
  <div class="body">
    <%= render_body content %>
  </div>
<% end %>
