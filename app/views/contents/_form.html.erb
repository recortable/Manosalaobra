<%= simple_form_for content do |form| %>
    <%= form.input :title %>
    <%= form.input :title_ca %>
    <%= form.input :author %>
    <%= form.input :published_at %>
    <%= form.input :body, as: :ckeditor %>
    <%= form.input :body_ca, as: :ckeditor %>
    <%= form.input :content_type, collection: [:html], include_blank: false %>
    <%= form.submit %>
<% end %>

