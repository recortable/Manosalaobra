<ul>
  <% users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <%= link_to 'Editar', edit_user_path(user) %>
      <%= link_to 'Borrar', user, confirm: '¿Estás seguro?', method: :delete %>
      <% if user.role.blank? and can? :edit, User %>
        <%= link_to 'Hacer administrador', user_path(user, user: {role: "admin"}), method: :put  %>
      <% end %>
      <% if user.role == 'admin' and can? :edit, User %>
        <%= link_to 'Hacer NO administrador', user_path(user, user: {role: nil}), method: :put  %>
      <% end %>
   </li>
 <%end %>  
</ul>
<%= link_to 'Añadir usuario', new_user_path %>
