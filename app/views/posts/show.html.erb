<%= render 'proposed_names/summary' %>
<div id="content-region" class="row blog-post">
  <div class="span3 post-info">
    <div class="post-date">
      <%= l post.created_at %>
    </div>
    <%= content_tag :div, "Por: " + post.user.name, class: "post-author" if post.user.present? %>
  </div>
  <div class="span6">
    <%= render 'show' %>

    <%= link_to icon(:edit, ' Editar'), [:edit, content], class: :dbtn if can? :edit, content %>
    <%= link_to icon(:trash, ' Borrar'), content, confirm: '¿Estás seguro?', class: :dbtn, method: :delete if can? :delete, content %>

    <div id="comments">
      <p id="comments-count">
        <%= pluralize content.comments.count, "comentario", "comentarios" %>
      </p>
      <%= render content.comments %>
    </div>
    <%= form_for [content, Comment.new] do |form| %>
        <%= form.text_area :body %>
        <%= form.submit "> Comentar" %>
    <% end %>
  </div>
  <div class="sidebar sidebar-right span3">
    <%= render 'contact-social-info' %>
  </div>
</div>

