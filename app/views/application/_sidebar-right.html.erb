<div class="block recent-posts-block">
  <div class="block-title">
    Blog
  </div>
  <div class="block-content">
    <ul>
      <%= content_tag_for :li, posts do |post| %>
        <div class="post-title"><%= link_to post.title, post %></div>
        <div class="post-date"><%= post.created_at.to_s(:dia_s_fecha) %></div>
      <% end %>
    </ul>
  </div>
</div>

<div class="block contact-block">
  <div class="contact-link">
    &gt; Contacta
  </div>
</div>

<div class="block social-block">
  <div class="social-link">
    Facebook / Twitter
  </div>
</div>

<div class="block attribution-block">
  <div class="block-content">
    Esto es un proyecto iniciado por...
  </div>
</div>